local player = game.Players.LocalPlayer

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(255, 0, 0)
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "Off rn.."
button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 50, 50)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Trent:ðŸ˜­"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

local farming = false

-- Button Logic for Enable/Disable Auto Farm
button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "KILLING THE TRIPLE APES BOSS RN!"
        button.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
        statusLabel.Text = "Trent:ðŸ˜Š"
        teleportToBossAndKill()
    else
        button.Text = "Off rn.."
        button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
        statusLabel.Text = "Trent:ðŸ˜­"
    end
end)

-- Anti-AFK Script
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- Function to Kill Boss (Remove Head)
local function killBoss()
    local boss = workspace:FindFirstChild("BadTimeTrioBoss")
    if boss and boss:FindFirstChild("Char") and boss.Char:FindFirstChild("Head") then
        boss.Char.Head:Destroy()
    end
end

-- Function to Teleport and Kill the Boss
local function teleportToBossAndKill()
    while farming do
        local boss
        repeat
            boss = workspace:FindFirstChild("BadTimeTrioBoss")
            task.wait(0.5) -- Keeps checking until the boss appears
        until boss and boss:FindFirstChild("Char") and boss.Char:FindFirstChild("Head")

        -- Teleport to the boss's head
        local head = boss.Char.Head
        if head then
            player.Character:SetPrimaryPartCFrame(head.CFrame)
        end

        -- Kill the boss by destroying its head
        task.wait(0.5)
        killBoss()

        task.wait(1) -- Adjust this delay as needed
    end
end
