local player = game.Players.LocalPlayer

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 0, 100) -- Purple
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(0, 255, 255) -- Blue
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE AUTO FARM"
button.BackgroundColor3 = Color3.fromRGB(0, 50, 100) -- Dark Blue
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

local farming = false

button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "DISABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
        statusLabel.Text = "Status: Farming..."
    else
        button.Text = "ENABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(0, 50, 100)
        statusLabel.Text = "Status: Idle"
    end
end)

-- Anti-AFK Script
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- Kill Boss Function
local function killBoss()
    while farming do
        local boss = workspace:FindFirstChild("BadTimeTrioBoss")
        
        if boss then
            local head = boss:FindFirstChild("Char") and boss.Char:FindFirstChild("Head")
            
            if head then
                -- Save the player's original position before teleporting
                local originalPosition = player.Character and player.Character.PrimaryPart and player.Character.PrimaryPart.CFrame
                
                -- Teleport to the boss
                player.Character:SetPrimaryPartCFrame(head.CFrame)
                task.wait(0.5) -- Small delay
                
                -- Destroy the head
                head:Destroy()
                
                -- Teleport back to original position
                if originalPosition then
                    task.wait(0.2) -- Short delay before teleporting back
                    player.Character:SetPrimaryPartCFrame(originalPosition)
                end
            end
        end
        
        task.wait(1) -- Wait before checking again
    end
end

-- Auto Farm Loop
task.spawn(function()
    while true do
        if farming then
            killBoss()
        end
        task.wait(1) -- Avoid high CPU usage
    end
end)
