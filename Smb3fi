local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local farming = false

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(255, 0, 0)
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE AUTO FARM"
button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 50, 50)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "DISABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
        autoFarm()
    else
        button.Text = "ENABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
    end
end)

-- Anti-AFK
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- Click Detectors Fix
local function activateClickDetectors()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("ClickDetector") then
            fireclickdetector(obj) -- Properly triggering ClickDetector
        end
    end
end

-- Kill NPCs Fix
local function killBoss()
    while farming do
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Humanoid") and obj.Parent:IsA("Model") and obj.Parent:FindFirstChild("HumanoidRootPart") then
                if obj.Health > 0 then
                    obj.Health = 0
                end
            end
        end
        task.wait(1) -- Prevents freezing
    end
end

-- Auto Farm
local function autoFarm()
    while farming do
        statusLabel.Text = "Farming..."
        
        -- Move to Character Box
        if workspace:FindFirstChild("Lobby") and workspace.Lobby:FindFirstChild("Characters Room") then
            local charRoom = workspace.Lobby["Characters Room"].StarterRoom.CharactersStarter.WeakMurder.Box.Display
            player.Character:SetPrimaryPartCFrame(charRoom.CFrame)
        end

        task.wait(2) -- Delay before next action
        
        activateClickDetectors()
        killBoss()
    end

    statusLabel.Text = "Idle"
end
