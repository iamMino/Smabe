local player = game.Players.LocalPlayer

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

local uiGlow = Instance.new("UIStroke", frame)
uiGlow.Color = Color3.fromRGB(255, 0, 0)
uiGlow.Thickness = 3

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Text = "ENABLE AUTO FARM"
button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 50, 50)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, 0, 0.5, 0)
statusLabel.Position = UDim2.new(0, 0, 0.5, 0)
statusLabel.Text = "Status: Idle"
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 16

local farming = false
local bossAlive = true
local autoClickEnabled = false

-- Button Logic
button.MouseButton1Click:Connect(function()
    farming = not farming
    if farming then
        button.Text = "DISABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    else
        button.Text = "ENABLE AUTO FARM"
        button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
    end
end)

-- Anti-AFK Script
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

-- Kill Script Function (Removing the boss's head to kill it)
local function killBoss()
    while bossAlive do
        local boss = workspace:FindFirstChild("BadTimeTrioBoss")
        if boss then
            local head = boss:FindFirstChild("Head")
            if head then
                head:Destroy()
            end
        end
        task.wait(1) -- Adjust the wait time if necessary
    end
end

-- Auto Click Function (Using VirtualInputManager)
local function autoClick()
    while autoClickEnabled do
        local clickDetector = workspace.Locations.LastCorridor.BadTimeSecret:FindFirstChild("bone")
        if clickDetector then
            print("ClickDetector found!")  -- Debug print
            local clickPosition = clickDetector.Parent.CFrame:PointToScreenSpace(clickDetector.Position)
            local virtualInput = game:GetService("VirtualInputManager")

            -- Simulate mouse button click at the click detector position
            virtualInput:InputBegin(Enum.UserInputType.MouseButton1, Enum.KeyCode.Unknown, Vector2.new(clickPosition.X, clickPosition.Y), game:GetService("Players").LocalPlayer)
            virtualInput:InputEnd(Enum.UserInputType.MouseButton1, Enum.KeyCode.Unknown, Vector2.new(clickPosition.X, clickPosition.Y), game:GetService("Players").LocalPlayer)
            
            print("Click sent to ClickDetector!")  -- Debug print
        else
            print("ClickDetector not found!")  -- Debug print if the ClickDetector isn't found
        end
        task.wait(0.5) -- Adjust speed of the clicks
    end
end

-- Loop to constantly check for auto click activation
task.spawn(function()
    while true do
        if autoClickEnabled then
            autoClick()
        end
        task.wait(0.1) -- Keeps the script running continuously
    end
end)

-- Toggle Auto Click (based on button state)
button.MouseButton1Click:Connect(function()
    autoClickEnabled = not autoClickEnabled
    if autoClickEnabled then
        statusLabel.Text = "Status: Farming"
    else
        statusLabel.Text = "Status: Idle"
    end
end)
